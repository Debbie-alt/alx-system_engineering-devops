#!/usr/bin/env bash
# Creates an RSA SSH key pair
# Define variables
KEY_NAME="school"
BITS=4096
PASSPHRASE="betty"

# Generate RSA key pair
ssh-keygen -t rsa -b $BITS -C "Generated by Bash script" -N "$PASSPHRASE" -f "$KEY_NAME"

echo "RSA key pair generated successfully."
echo "Private key saved as: $KEY_NAME"
